@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="科技新闻, 移动互联网, 资讯平台, 开放日, 互联网创业" />
    <meta name="description" content="一个关注互联网的科技博客" />

    <link rel="stylesheet" href="~/content/css/font.css">
    <link rel="stylesheet" href="~/content/css/passport.css">
    <script src="//cdn.bootcss.com/jquery/2.2.4/jquery.min.js"></script>
</head>

<body>
<div class="container">
    @RenderBody()
</div>

<div class="copyright">
    <div class="clearfix">
        <h2>Copyright © <span>2016</span>, Murtain Digital Co., Ltd. All Rights Reserved.</h2>
        <h3 class="company">@L("上海MT信息科技有限公司")</h3>
        <ul class="privacy">
            <li><a href="http://murtain.imwork.net/localization/culture?name=zh-CN&returnUrl=@(Request.Url.ToString())">@L("简体中文")</a></li>
            <li><a href="http://murtain.imwork.net/localization/culture?name=en&returnUrl=@(Request.Url.ToString())">@L("英文")</a></li>
            <li><a href="http://murtain.imwork.net/support/#/agreement">@L("法律声明")</a></li>
            <li><a href="http://murtain.imwork.net/support/#/privacy">@L("隐私条款")</a></li>
        </ul>
        <h4><a href="http://www.miibeian.gov.cn/" target="_blank"><span>@L("京ICP备14041720号-1")</span><span>@L("京ICP证140622号")</span><span>@L("京公网安备11010502025474")</span></a></h4>
    </div>
</div>
@RenderSection("scripts", required: false)
</body>
</html>
