
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>帐户管理</title>
    <meta name="keywords" content="创业, 想创业, 投资, 融资, 创投媒体, 创业公司, 科技新闻, 移动互联网, 资讯平台, 开放日, 互联网创业" />
    <meta name="description" content="一个关注互联网创业的科技博客" />

    <link href="https://cdn.bootcss.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/content/css/font.css">
    <link rel="stylesheet" href="~/content/css/index.css">
    
    <script src="https://cdn.bootcss.com/require.js/2.3.2/require.min.js" defer async="true" data-main="https://localhost:44373/content/js/main.js"></script>

    <script>
        $(function () {
            $('.begin-edit').click(function () {
                var self = $(this);
                var $detail = self.parent().parent().find('.detail');

                if (self.text() === '编辑') {
                    $detail.find('.hidden').removeClass('hidden');
                    self.text('完成');
                } else if (self.text() === '完成') {
                    $detail.find('.editable').show();
                    $detail.find('.editable').next().addClass('hidden');
                    self.text('编辑');
                }
            });
        });
    </script>
</head>
<body>
    <div class="backgroud">
        <div class='backgroud-frosted-glass'></div>
        <div class="welcome">
            <div class="logout"></div>
        </div>
    </div>
    <div class="image">
        <img src="~/content/images/avtar.jpg" alt="" />
        <a class="logout" href="/Account/SignOut">注销</a>
    </div>
    <div class="container">
        <div class="section account">
            <h2>账户</h2>
            <div class="detail">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="subtitle">您在网站、社区中显示的名称</h3>
                        <div class="content">
                            <div class="text">
                                <a href="#" class="editable">穆轻寒</a>
                                <div class="edit">
                                    <div class="text"><a href="#">更改显示名称...</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h3 class="subtitle">邮箱</h3>
                        <div class="content">
                            <div class="text editable"><a href="#">392327013@qq.com</a></div>
                            <div class="edit">
                                <div class="text"><a href="#">更改邮箱...</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="subtitle">联系方式</h3>
                        <div class="content">
                            <div class="text editable"><a href="#">15618275259</a></div>
                            <div class="edit">
                                <div class="text"><a href="#">更改联系方式...</a></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h3 class="subtitle">注册日期</h3>
                        <div class="content">
                            <div class="text"><a href="#">2016年10月12日</a></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="subtitle">语言</h3>
                        <div class="content">
                            <div class="text">
                                <select name="" id="" class="form-control">
                                    <option value="zh-CN">简体中文 - 中文（简体）</option>
                                    <option value="en">英语</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="opration">
                <a href="#" class="begin-edit">编辑</a>
            </div>
        </div>
        <div class="section security">
            <h2>安全</h2>
            <div class="detail">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="subtitle">密码</h3>
                        <div class="content">
                            <div class="text"><a href="#">更改密码...</a></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h3 class="subtitle">安全提示问题</h3>
                        <div class="content">
                            <div class="text"><a href="#">更改安全提示问题...</a></div>
                            <div class="edit"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="subtitle">安全邮箱</h3>
                        <div class="content">
                            <div class="text"><a href="#">392327013@qq.com</a></div>
                            <div class="edit"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

