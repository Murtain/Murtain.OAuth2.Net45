@model Murtain.OAuth2.Web.Models.SetPasswordViewModel
@{
    ViewBag.Title = L("注册账号");
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<form action="/Account/@Model.Action" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="telphone" value="@Model.Telphone" />
    <input type="hidden" name="signin" value="@Model.SignIn" />
    <input type="hidden" name="captcha" value="@Model.Captcha" />


    <div class="form-group">
        <div class="logo-image"></div>
        <div class="title"></div>
    </div>
    <div class="form-group captcha-tip">
        <p>@L("设置您的密码 ,密码长度6~16位，可以是数字、字母等任意字符")</p>
    </div>
    <div class="form-group">
        @if (!string.IsNullOrWhiteSpace(Model?.ErrorMessage))
        {
            <span class="warningicon">@Model.ErrorMessage</span>
            <span class="error-message"></span>
        }
        <div class="input password">
            <span class="icon"><i>@L("密码")</i></span>
            <input type="password" placeholder="@L("密码")" name="password"/>
        </div>
        <div class="input confirm-password">
            <span class="icon"><i>@L("重复密码")</i></span>
            <input type="password" placeholder="@L("重复密码")" name="confirmPassword"/>
        </div>
        <div class="btn-link">
            <p class="agreement">
                <input type="checkbox" checked="checked" class="check-box"/>
                <label class="check-lable">@L("我已阅读并同意遵守")<a href="http://murtain.imwork.net/support/#/agreement" target="_blank">@L("法律声明")</a> @L("和")<a href="http://murtain.imwork.net/support/#/privacy" target="_blank">@L("隐私条款")</a></label>
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="btn-submit">
            <input type="submit" class="btn-submit" value="@L("完成")">
        </div>
    </div>
    <div class="line"></div>
    <div class="form-group">
        <p class="go-signin">
            <a href="@("/core/" + IdentityServer3.Core.Constants.RoutePaths.Login + "?signin=" + Model.SignIn)" class="">@("如果您已拥有账号，则可在此") <span>@L("登录")</span></a>
        </p>
    </div>
</form>
