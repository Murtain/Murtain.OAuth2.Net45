@{
    ViewBag.Title = L("注册帐号");
    Layout = null;
}
<div class="animated fadeIn">
        <div class="form-group">
            <div class="logo-image"></div>
            <div class="title"></div>
        </div>
        <div class="form-group">
            <div ng-hide="LocalRegistrationViewModel.Identity.ErrorMessage == undenfined || LocalRegistrationViewModel.Identity.ErrorMessage == ''" style="display:none">
                <span class="warningicon">{{LocalRegistrationViewModel.Identity.ErrorMessage}}</span>
                <span class="error-message"></span>
            </div>
            <div class="input">
                <span class="icon"><i>@L("手机号/邮箱")</i></span>
                <input type="text" placeholder="@L("手机号/邮箱")" name="telphone" />
            </div>
            <div class="input password">
                <span class="icon"><i>@L("验证码")</i></span>
                <input type="text" class="captcha" placeholder="@L("验证码")" name="captcha" />
                <img class="img-captcha" ng-src="{{LocalRegistrationViewModel.CaptchaEndpoint}}" ng-click="LocalRegistrationViewModel.RefreshCaptcha()" />
            </div>
            <div class="btn-link">
                <p class="agreement">
                    <input type="checkbox" class="check-box" />
                    <label class="check-lable">@L("我已阅读并同意遵守")<a href="{{LocalRegistrationViewModel.AgreementEndpoint}}" target="_blank">@L("法律声明")</a> @L("和")<a href="{{LocalRegistrationViewModel.PrivacyEndpoint}}" target="_blank">@L("隐私条款")</a></label>
                </p>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-submit">
                <input type="button" class="btn-submit" value="@L("注册")" ng-click="LocalRegistrationViewModel.Register()">
            </div>
        </div>
        <div class="line"></div>
        <div class="form-group">
            <p class="go-signin">
                <a href="{{LocalRegistrationViewModel.LoginEndpoint}}" class="">@("如果您已拥有账号，则可在此") <span>@L("登录")</span></a>
            </p>
        </div>
</div>